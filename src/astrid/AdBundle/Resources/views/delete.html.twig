{# src/astrid/AdBundle/Resources/views/index.html.twig #}

{% extends "astridAdBundle::layout.html.twig" %}

{% block title %}
  Deleting {{ advert.title }}
{% endblock %}

{% block body %}

  <h2> Deleting {{ advert.title }} </h2>


<p> Are you sure you want to delete this ad ? </p>

 <form action="{{ path('astrid_ad_delete', {'id': advert.id}) }}" method="post">
    <a href="{{ path('astrid_ad_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Go back to the ad.
    </a>

    <input type="submit" value="Delete" class="btn btn-danger" />

    {{ form_rest(form) }}
  </form>

{% endblock %}
